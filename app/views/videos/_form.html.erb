<%= form_for(@video, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.label :youtube_id, 'Youtube ID', class: 'control-label' %>
  <%= f.text_field :youtube_id, placeholder: "ID", class: 'form-control' %>

  <%= f.label :category_ids, 'Categories', class: 'control-label' %>
  <%= f.select :category_ids, @categories.map { |c| [c.name, c.id] }, {}, multiple: true, class: 'form-control' %>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>